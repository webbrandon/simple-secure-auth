mixin username()
  h5 User Name
  .input-group
    .input-group-addon First 
    input.form-control(name='first', type='input', value=user.firstname, required)
  br
  .input-group
    .input-group-addon Last &nbsp;
    input.form-control(name='last', type='input',value=user.lastname, required)
    
mixin credential()
  h5 Login Credentials
  .input-group
    .input-group-addon User Email
    input.form-control(name='user', type='email', value=user.email required)
  br

mixin UpdateUser()
  form(action='/user/update', method='POST', role='form')
    input.form-control(name='id', type='hidden', value=user.id)
    +username()
    +credential()
    hr      
    p.pull-right
      button.btn.btn-primary(type="submit") Save 
      |  
      button.btn.btn-default(type="button", href='/') Cancel

mixin DeleteUser()
  form(action='/user/delete', method='POST', role='form')
    br
    br
    br
    h4 Delete User
    input.form-control(name='id', type='hidden', value=user.id)
    p  Once you delete your profile it will not be recoverable.
    p.pull-left
      button.btn.btn-danger(type="submit") Delete 
